    var buffer = _Buffer72()
    return buffer.withBytes { (bufferPtr) in
      let actualLength
      = _int64ToStringImpl(bufferPtr, 72, value, radix, uppercase)
      return String._fromASCII(
        UnsafeBufferPointer(start: bufferPtr, count: Int(actualLength)))
